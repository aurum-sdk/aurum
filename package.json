{
  "name": "aurum-monorepo",
  "version": "0.1.2",
  "description": "Aurum wallet connection SDK monorepo",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "build": "node packages/core/scripts/bundle-css.js && pnpm -r --filter=./packages/* build",
    "release": "node scripts/release.mjs",
    "clean": "pnpm -r --filter=./packages/* clean",
    "test": "pnpm -r --filter=./packages/* test",
    "typecheck": "pnpm -r --filter=./packages/* exec tsc --noEmit"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,css,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "dotenv": "^17.2.3",
    "enquirer": "^2.4.1",
    "eslint": "^9.17.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "picocolors": "^1.1.1",
    "prettier": "^3.6.2",
    "semver": "^7.7.3",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.49.0"
  },
  "keywords": [
    "ethereum",
    "wallet",
    "web3",
    "typescript",
    "react"
  ],
  "author": "Hunter Cote",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aurum-sdk/aurum.git"
  },
  "homepage": "https://github.com/aurum-sdk/aurum#readme",
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@types/react",
        "react",
        "@react-native-async-storage/async-storage"
      ],
      "allowedVersions": {
        "react": "18",
        "@types/react": "18",
        "@react-native-async-storage/async-storage": "1",
        "typescript": "5"
      }
    },
    "overrides": {
      "@types/react": "^18.0.0",
      "@types/react-dom": "^18.0.0",
      "ox": "^0.9.6"
    }
  }
}
